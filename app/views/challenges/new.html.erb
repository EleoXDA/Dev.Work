<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white p-3 shadow" style="border-radius:15px !important;">
        <h3>Create a new challenge</h3>
        <%= simple_form_for @challenge do |f| %>
          <%= f.input :title, placeholder: 'Add a Title' %>
          <%= f.input :content, placeholder: 'Describe in Details' %>
          <%= f.input :location, placeholder: 'Specify Challenge location' %>
          <%= f.association :filter, label: "Programming language ยน", collection: Filter.all.order(:name), input_html: { data: { controller: "tom-select" } } %>
          <%= f.input :price_max, placeholder: 'Put maximum price in Euros' %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.input :deadline, placeholder: 'Put a deadline for your project' %>
          <%= f.submit class:"btn btn-dark btn-lg rounded-lg challenge-buttons", id: "challenge_buttons" %>
        <% end %>
      </div>
      <div class="div" style="height:10px"></div>
      <div class="bg-white rounded p-3 shadow" style="border-radius:15px !important; text-align:left !important; opacity:0.9 !important">
        <p style="font-weight: 200 !important">* All the fields need to be present for successful challenge creation</p>
        <p style="font-weight: 200 !important"><sup>1</sup> You will not be able to change the programming language of the challenge afterwards - choose wisely</p>
      </div>
    </div>
  </div>
</div>
