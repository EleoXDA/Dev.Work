<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edit/Update challenge</h3>
        <%= simple_form_for @challenge do |f| %>
          <%= f.input :title, placeholder: 'Edit the Title' %>
          <%= f.input :content, placeholder: 'Edit the description' %>
          <%= f.input :location, placeholder: 'Edit Challenge location' %>
          <%= f.association :filter, collection: Filter.all.order(:name), input_html: { data: { controller: "tom-select" } } %>
          <%= f.input :price_max, placeholder: 'Edit price' %>
          <%= f.input :deadline, placeholder: 'Edit deadline' %>
          <%= f.submit class:"btn btn-dark btn-lg rounded-lg" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
