<div class="container mt-5 mb-3 cards">
  <div class="grid">
    <% @challenges.each_with_index do |challenge, index| %>
      <%# <div class="col-md-4"> %>
        <div class="flex flex-column justify-content-between card p-3 mb-2 card-bg">
          <div>
            <div class="d-flex justify-content-between border-bottom pb-3">
              <div class="d-flex flex-row align-items-center ">
                <div class="image">
                  <% if challenge.user.image_url %>
                    <%= image_tag(challenge.user.image_url) %>
                  <% end %>
                </div>
                <div class="ms-2 c-details">
                  <h5><%= challenge.user.name %>
                  </h5>
                </div>
              </div>
              <div class="badge"><%= challenge.filter.name %>
              </div>
            </div>
            <div class="mb-5 mt-3">
              <h1 class="heading"><%= challenge.title %>
              </h1>
            </div>
            <div class="my-3">
                <div class="my-3"> <span class="text1">Deadline: <span class="text2"><%= challenge.deadline.strftime("%B %d, %Y") %>
                </span>
                </span>
                </div>
             </div>
          </div>
          <%= link_to "View details", challenge_path(challenge), target:"_blank", class:"btn btn-dark btn-lg rounded-lg", id:"button"%>
        </div>
      <%# </div> %>
    <% end %>
    </div>
  </div>
</div>
